{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist" ,
    "rootDir": "./src" ,
    /* Experimental Options */
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true, 
    /* Advanced Options */
    "forceConsistentCasingInFileNames": true 
  },
  "files": [
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
